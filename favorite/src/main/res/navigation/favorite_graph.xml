<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/favoriteFragment">

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.rijaldev.favorite.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite">
        <action
            android:id="@+id/action_favoriteFragment_to_detail_nav"
            app:destination="@id/detail_nav">
            <argument
                android:name="movie"
                app:argType="com.rijaldev.core.domain.model.Movie" />
        </action>
    </fragment>
    <include app:graph="@navigation/detail_nav" />
</navigation>